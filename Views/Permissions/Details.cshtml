<!-- Страницата работи с модел от тип 'IEnumerable<MvcTransplantation_kidney.Models.Permission>', който представлява колекция от обекти от клас 'Permission'.-->
@model MvcTransplantation_kidney.Models.Permission

<!--Задава заглавието на страницата като "Детайли", използвайки 'ViewData' за предаване на данни от контролера към изгледа.-->
@{
    ViewData["Title"] = "Детайли";
}

<!--Заглавие на страницата (Heading 1) с текст "Детайли" и го центрира с клас 'text-center'.-->
<h1 class="text-center">Детайли</h1>

<!--Този код генерира HTML, който показва наименованията на полетата UserId, PermissionType и техните стойности в рамките на Bootstrap структура, разделена на четири колони (по 2 колони за етикетите и по 10 за стойностите).-->
<div>
    <h4>Разрешение</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PermissionType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PermissionType)
        </dd>
    </dl>
</div>

<!--Този код създава центрирани хипервръзки за редактиране на разрешение на базата на неговия `PermissionId` и за връщане към списъка с разрешения в ASP.NET MVC.-->
<div class="text-center">
    <a asp-action="Edit" asp-route-id="@Model?.PermissionId">Редактирай</a> |
    <a asp-action="Index">Обратно към списъка</a>
</div>
