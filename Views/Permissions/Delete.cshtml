<!-- Страницата работи с модел от тип 'IEnumerable<MvcTransplantation_kidney.Models.Permission>', който представлява колекция от обекти от клас 'Permission'.-->
@model MvcTransplantation_kidney.Models.Permission

<!--Задава заглавието на страницата като "Изтриване", използвайки 'ViewData' за предаване на данни от контролера към изгледа.-->
@{
    ViewData["Title"] = "Изтриване";
}

<!--Заглавие на страницата (Heading 1) с текст "Изтриване" и го центрира с клас 'text-center'.-->
<h1 class="text-center">Изтриване</h1>

<!--Кодът показва потвърдително съобщение за изтриване на разрешение и визуализира ИД на потребителя и типа на разрешението, свързани с това разрешение, който ще бъде изтрито.-->
<h3 class="text-center">Сигурни ли сте, че искате да изтриете това?</h3>
<div>
    <h4>Разрешение</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PermissionType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PermissionType)
        </dd>
    </dl>
    
    <!--Кодът представлява формуляр за изтриване на разрешение. Скрити полета предават ID на разрешението, а бутонът "Изтрий" изпраща заявка за изтриване. Има и линк за връщане към списъка с доктори.-->
    <form asp-action="Delete">
        <input type="hidden" asp-for="PermissionId" />
        <input type="submit" value="Изтрий" class="btn btn-danger" />
        <a asp-action="Index">Обратно към списъка</a>
    </form>
</div>
