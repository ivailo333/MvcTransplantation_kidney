<!-- Страницата работи с модел от тип 'IEnumerable<MvcTransplantation_kidney.Models.Doctor>', който представлява колекция от обекти от клас 'Doctor'.-->
@model MvcTransplantation_kidney.Models.Doctor

<!--Задава заглавието на страницата като "Изтриване", използвайки 'ViewData' за предаване на данни от контролера към изгледа.-->
@{
    ViewData["Title"] = "Изтриване";
}

<!--Заглавие на страницата (Heading 1) с текст "Изтриване" и го центрира с клас 'text-center'.-->
<h1 class="text-center">Изтриване</h1>

<!--Кодът показва потвърдително съобщение за изтриване на информацията за доктор и визуализира ИД на потребителя, името и фамилията, и специалността на доктора, който ще бъде изтрит.-->
<h3 class="text-center">Сигурни ли сте, че искате да изтриете това?</h3>
<div>
    <h4>Доктор</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Specialty)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Specialty)
        </dd>
    </dl>
    
    <!--Кодът представлява формуляр за изтриване на доктор. Скрити полета предават ID на доктора, а бутонът "Изтрий" изпраща заявка за изтриване. Има и линк за връщане към списъка с доктори.-->
    <form asp-action="Delete">
        <input type="hidden" asp-for="DoctorId" />
        <input type="submit" value="Изтрий" class="btn btn-danger" />
        <a asp-action="Index">Обратно към списъка</a>
    </form>
</div>
