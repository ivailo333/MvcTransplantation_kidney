<!-- Страницата работи с модел от тип 'IEnumerable<MvcTransplantation_kidney.Models.Doctor>', който представлява колекция от обекти от клас 'Doctor'.-->
@model MvcTransplantation_kidney.Models.Doctor

<!--Задава заглавието на страницата като "Редактиране", използвайки 'ViewData' за предаване на данни от контролера към изгледа.-->
@{
    ViewData["Title"] = "Редактиране";
}

<!--Заглавие на страницата (Heading 1) с текст "Редактиране" и го центрира с клас 'text-center'.-->
<h1 class="text-center">Редактиране</h1>

<!--Този код представлява формуляр за редактиране на съществуващ доктор. Формата включва поле за въвеждане на ИД на потребителя, първото име, фамилията, поле за специалността, с вградена валидация, и бутон за изпращане на данните към сървъра.-->
<h4 class="text-center">Доктор</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DoctorId" />
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.Users"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Specialty" class="control-label"></label>
                <select asp-for="Specialty" class="form-control" asp-items="ViewBag.Specialties"></select>
                <span asp-validation-for="Specialty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Запиши" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<!--Кодът показва центриран линк, който връща потребителя към основния списък от елементи на страницата, асоциирана с действието 'Index'.-->
<div class="text-center">
    <a asp-action="Index">Обратно към списъка</a>
</div>

<!--Включва частичен изглед със скриптове за валидация на клиентската страна в специфична секция Scripts на страницата. Това позволява валидацията на формите да работи правилно, като добавя необходимите JavaScript функционалности.-->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
