<!-- Страницата работи с модел от тип 'IEnumerable<MvcTransplantation_kidney.Models.User>', който представлява колекция от обекти от клас 'User'.-->
@model MvcTransplantation_kidney.Models.User

<!--Задава заглавието на страницата като "Детайли", използвайки 'ViewData' за предаване на данни от контролера към изгледа.-->
@{
    ViewData["Title"] = "Детайли";
}


<!--Заглавие на страницата (Heading 1) с текст "Детайли" и го центрира с клас 'text-center'.-->
<h1 class="text-center">Детайли</h1>

<!--Този код генерира HTML, който показва наименованията на полетата UserName, Password и RoleId и техните стойности в рамките на Bootstrap структура, разделена на шест колони (по 2 колони за етикетите и по 10 за стойностите).-->
<div>
    <h4>Потребител</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.RoleId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RoleId)
        </dd>
    </dl>
</div>

<!--Този код създава центрирани хипервръзки за редактиране на потребителя на базата на неговия `UserId` и за връщане към списъка с потребители в ASP.NET MVC.-->
<div class="text-center">
    <a asp-action="Edit" asp-route-id="@Model?.UserId">Редактирай</a>
    <a asp-action="Index">Обратно към списъка</a>
</div>