<!-- Страницата работи с модел от тип 'IEnumerable<MvcTransplantation_kidney.Models.Message>', който представлява колекция от обекти от клас 'Message'.-->
@model MvcTransplantation_kidney.Models.Message

<!--Задава заглавието на страницата като "Изтриване", използвайки 'ViewData' за предаване на данни от контролера към изгледа.-->
@{
    ViewData["Title"] = "Изтриване";
}

<!--Заглавие на страницата (Heading 1) с текст "Изтриване" и го центрира с клас 'text-center'.-->
<h1 class="text-center">Изтриване</h1>

<!--Кодът показва потвърдително съобщение за изтриване на съобщение и визуализира ИД на доктора, ИД на пациента, текста на съобщението и датата на изпращане на съобщението, свързани с това съобщение, който ще бъде изтрито.-->
<h3 class="text-center">Сигурни ли сте, че искате да изтриете това?</h3>
<div>
    <h4>Съобщение</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DoctorId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoctorId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PatientId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatientId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MessageText)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MessageText)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SentDate)
        </dd>
    </dl>
    
    <!--Кодът представлява формуляр за изтриване на съобщение. Скрити полета предават ID на съобщението, а бутонът "Изтрий" изпраща заявка за изтриване. Има и линк за връщане към списъка с доктори.-->
    <form asp-action="Delete">
        <input type="hidden" asp-for="MessageId" />
        <input type="submit" value="Изтрий" class="btn btn-danger" />
        <a asp-action="Index">Обратно към списъка</a>
    </form>
</div>
