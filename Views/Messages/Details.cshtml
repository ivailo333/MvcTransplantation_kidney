<!-- Страницата работи с модел от тип 'IEnumerable<MvcTransplantation_kidney.Models.Message>', който представлява колекция от обекти от клас 'Message'.-->
@model MvcTransplantation_kidney.Models.Message

<!--Задава заглавието на страницата като "Детайли", използвайки 'ViewData' за предаване на данни от контролера към изгледа.-->
@{
    ViewData["Title"] = "Детайли";
}

<!--Заглавие на страницата (Heading 1) с текст "Детайли" и го центрира с клас 'text-center'.-->
<h1 class="text-center">Детайли</h1>

<!--Този код генерира HTML, който показва наименованията на полетата DoctorId, PatientId, MessageText, SentDate и техните стойности в рамките на Bootstrap структура, разделена на осем колони (по 2 колони за етикетите и по 10 за стойностите).-->
<div>
    <h4>Съобщение</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DoctorId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DoctorId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PatientId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PatientId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MessageText)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MessageText)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SentDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SentDate)
        </dd>
    </dl>
</div>

<!--Този код създава центрирани хипервръзки за редактиране на съобщение на базата на неговия `MessageId` и за връщане към списъка със съобщения в ASP.NET MVC.-->
<div class="text-center">
    <a asp-action="Edit" asp-route-id="@Model?.MessageId">Редактирай</a> |
    <a asp-action="Index">Обратно към списъка</a>
</div>
