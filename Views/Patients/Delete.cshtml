<!-- Страницата работи с модел от тип 'IEnumerable<MvcTransplantation_kidney.Models.Patient>', който представлява колекция от обекти от клас 'Patient'.-->
@model MvcTransplantation_kidney.Models.Patient

<!--Задава заглавието на страницата като "Изтриване", използвайки 'ViewData' за предаване на данни от контролера към изгледа.-->
@{
    ViewData["Title"] = "Изтриване";
}

<!--Заглавие на страницата (Heading 1) с текст "Изтриване" и го центрира с клас 'text-center'.-->
<h1 class="text-center">Изтриване</h1>

<!--Кодът показва потвърдително съобщение за изтриване на информацията за пациент и визуализира името и фамилията, рожденната дата и датата на трансплантацията, свързан с този пациент, който ще бъде изтрит.-->
<h3 class="text-center">Сигурни ли сте, че искате да изтриете това?</h3>
<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TransplantDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TransplantDate)
        </dd>
    </dl>
    
    <!--Кодът представлява формуляр за изтриване на пациент. Скрити полета предават ID на пациента, а бутонът "Изтрий" изпраща заявка за изтриване. Има и линк за връщане към списъка с пациенти.-->
    <form asp-action="Delete">
        <input type="hidden" asp-for="PatientId" />
        <input type="submit" value="Изтрий" class="btn btn-danger" />
        <a asp-action="Index">Обратно към списъка</a>
    </form>
</div>
